@model Blogging_Times.Posts.HomeViewModel


<div class="col-lg-8 post-list blog-post-list">
    @foreach (var item in Model.PostList)
    {
        <div class="single-post">
            @*<img class="img-fluid" src="~/Content/img/blog/p1.jpg" alt="">*@

            <a href="/Home/PostDetails?post=@item.ID">
                <h1>
                    @item.PostTitle
                </h1>
            </a>
            <p>
                @if (item.PostDescription.Length > 250)
                {
                    @item.PostDescription.Substring(0, 250)
                    <a href="/Home/PostDetails?post=@item.ID">......Continue Reading</a>
                }
                else
                {
                    @item.PostDescription
                }
            </p>
            <div class="bottom-meta">
                <div class="user-details row align-items-center">
                    <div class="comment-wrap col-lg-6">
                        <ul>
                            <li><a href="#"><span class="lnr lnr-heart"></span>	4 likes</a></li>
                            <li><a href="#"><span class="lnr lnr-bubble"></span> 06 Comments</a></li>
                        </ul>
                    </div>
                    <div class="social-wrap col-lg-6">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fa fa-behance"></i></a></li>
                        </ul>

                    </div>
                </div>
                Post Date : @item.CreatedAt.ToLongDateString() <br />
                Post Category : <a href="/Home/index?category=@item.PostCategory.ID">@item.PostCategory.CategoryName</a>  <br />
                
                    Tags:
                    @foreach (var item2 in item.PostTagList)
                    {
                        @:<a href="/Home/index?tag=@item2.ID">@item2.TagName</a> ,
                    }
                        
                    
               
                <br />
            </div>
        </div>
        <hr />
    }
</div>